{
    "build": {
        "name": "libxutils.a",
        "outputDir": "./build",
        "flags": "-g -O2 -Wall -D_XUTILS_DEBUG -D_XUTILS_USE_GNU -D_ASSERT_TIMED",
        "libs": "-lpthread",
        "overwrite": true,
        "verbose": 2,

        "find": {
            "libssl.so:libcrypto.so": {
                "path": "/usr/local/ssl/lib:/usr/local/ssl/lib64",

                "found": {
                    "append": {
                        "flags": "-D_XUTILS_USE_SSL",
                        "libs": "-lssl -lcrypto"
                    }
                }
            }
        },

        "sources": [
            "./src/xver.c",
            "./src/crypt/aes.c",
            "./src/crypt/base64.c",
            "./src/crypt/crc32.c",
            "./src/crypt/crypt.c",
            "./src/crypt/hmac.c",
            "./src/crypt/md5.c",
            "./src/crypt/rsa.c",
            "./src/crypt/sha256.c",
            "./src/crypt/sha1.c",
            "./src/data/array.c",
            "./src/data/hash.c",
            "./src/data/jwt.c",
            "./src/data/list.c",
            "./src/data/map.c",
            "./src/data/buf.c",
            "./src/data/json.c",
            "./src/data/str.c",
            "./src/net/addr.c",
            "./src/net/event.c",
            "./src/net/http.c",
            "./src/net/mdtp.c",
            "./src/net/ntp.c",
            "./src/net/rtp.c",
            "./src/net/sock.c",
            "./src/net/api.c",
            "./src/net/ws.c",
            "./src/sys/sync.c",
            "./src/sys/pool.c",
            "./src/sys/thread.c",
            "./src/sys/cli.c",
            "./src/sys/cpu.c",
            "./src/sys/xfs.c",
            "./src/sys/log.c",
            "./src/sys/sig.c",
            "./src/sys/xtime.c",
            "./src/sys/mon.c",
            "./src/sys/type.c",
            "./src/sys/search.c"
        ],

        "includes": [
            "./src/crypt",
            "./src/data",
            "./src/net",
            "./src/sys",
            "./src"
        ]
    },

    "install": {
        "headerDir": "/usr/local/include/xutils",
        "binaryDir": "/usr/local/lib"
    }
}
